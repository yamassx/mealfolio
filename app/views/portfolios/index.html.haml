-# = render partial: "portfolios/portfolio", collection: @portfolios
-# .cooks-top__contents__thumbnail
-#   .cooks-top__contents__thumbnail__img
-#   .cooks-top__contents__thumbnail__title
.cooks-top__contents__thumbnail
  .cooks-top__contents__thumbnail__img
    =image_tag (portfolio.image1.url), size: "250,200", class: "image"
  .cooks-top__contents__thumbnail__footer
    .cooks-top__contents__thumbnail__footer__title
      = "#{portfolio.title}"
    .cooks-top__contents__thumbnail__footer__utility
      %ul
        %li
          =link_to "編集", edit_portfolio_path
        %li
          =link_to "詳細", show_portfolio_path
        %li
          =link_to "削除", destroy_portfolio_path
    