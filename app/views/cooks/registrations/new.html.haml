.signup
  .signup__title
    %h2 ユーザー新規登録
  .signup__forms
    = form_for(resource,url: registration_path(resource_name))do |f|
      = render "devise/shared/error_messages", resource: resource
      .nickname
        = f.label :nickname
        %br
        = f.text_field :nickname, class:"form", autofocus: true, autocomplete: "料理人太郎"
      .name
        = f.label :お名前
        %br
        = f.label :氏
        = f.text_field :first_name, class:"half_form", autofocus: true, autocomplete: "料理"
        = f.label :名
        = f.text_field :last_name, class:"half_form", autofocus: true, autocomplete: "太郎"
      .email
        = f.label :email
        %br
        = f.email_field :email, class:"form", autofocus: true, autocomplete: "email"
      .password
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上)
        %br
        = f.password_field :password, class:"form", autocomplete: "new-password"
      .password-confirmation
        = f.label :password確認
        %br
        = f.password_field :password_confirmation, class:"form", autocomplete: "new-password"
      .actions
        = f.submit "登録する", class: "submit_btn"
